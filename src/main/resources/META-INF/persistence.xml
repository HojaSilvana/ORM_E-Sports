<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="orm-sports" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades de la practica -->
        <class>com.dam.model.Equipo</class>
        <class>com.dam.model.Jugador</class>
        <class>com.dam.model.Estadio</class>

        <properties>

            <!-- conexiones con MySQL en la base de datos -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/orm_competicion"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>

            <property name="jakarta.persistence.jdbc.password"
                      value="root"/>

            <property name="jakarta.persistence.schema-generation.database.action"
                      value="drop-and-create"/>

            <!-- dialecto de hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- esto es para que hibernate borre y cree las tablas cada vez -->
            <property name="hibernate.hbm2ddl.auto"
                      value="create"/>

            <!-- para comprobar las relaciones -->
            <property name="hibernate.show_sql"
                      value="true"/>

            <property name="hibernate.format_sql"
                      value="true"/>

        </properties>

    </persistence-unit>

</persistence>
